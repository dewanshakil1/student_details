<div class="container my-4 studentForm">
	<div class="row justify-content-center">
		<div class="col-md-6">
			<a class="btn btn-sm btn-info text-white" href="/student">Back</a>
			<div class="card shadow">
				<h2 class="text-center">update <%= editdata.name %> data</h2>

				<div class="card-body">
					<form
						action="/student/update/<%= editdata.id %> "
						method="post"
						enctype="multipart/form-data"
					>
						<div class="form-group">
							<label for="">Name:</label>
							<input
								type="text"
								class="form-control"
								name="name"
								value="<%= 	editdata.name %> "
								placeholder="enter your name"
							/>
						</div>
						<div class="form-group my-3">
							<label for="">email:</label>
							<input
								type="text"
								class="form-control"
								name="email"
								value="<%= 	editdata.email %> "
								placeholder="enter your email"
							/>
						</div>
						<div class="form-group my-3">
							<label for="">cell:</label>
							<input
								type="text"
								class="form-control"
								name="cell"
								value="<%= 	editdata.cell %> "
								placeholder="enter your phone number"
							/>
						</div>
						<div class="form-group my-3">
							<label for="">location:</label>
							<select name="location" id="">
								<option value="">--select--</option>
								<option <% if (editdata.location=="Dhaka") { %>
									selected <% } %> value="Dhaka">Dhaka
								</option>
								<option <% if (editdata.location=="sherpur") { %>
									selected <% } %> value="sherpur">sherpur</option>
								<option <% if (editdata.location=="mymensingh") { %>
									selected <% } %> value="mymensingh">mymensingh</option>
								<option <% if (editdata.location=="mirmur") { %>
									selected <% } %> value="mirmur">mirmur</option>
							</select>
						</div>
						<div class="form-group my-3">
							<label for="">photo:</label>
							<br />
							<img
								class="preview-student"
								src="/image/student/<%= editdata.photo %> "
								alt=""
							/>

							<label for="upload-image">
								<img src="/image/logo.jpg" alt="" />
							</label>
							<input name="student-photo" type="file" id="upload-image" />
						</div>
						<div class="form-group my-3">
							<input
								class="btn btn-info w-100 text-white text-uppercase"
								type="submit"
								value="update"
							/>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
